generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Contacts Contacts[]

  @@map("users")
}

model Contacts {
  id String @id @default(uuid())
  name String
  email String
  phone String
  userId String
  user User @relation(fields: [userId],references: [id])

  @@map("contacts")
}

